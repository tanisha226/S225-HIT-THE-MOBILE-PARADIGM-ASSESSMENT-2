<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FAFC"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Muurrbuy Information App"
        android:textSize="24sp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:gravity="center"
        android:visibility="gone"
        android:background="#E8F5E8"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Newsletter Registration"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/newsletterEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your email address"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:textColorHint="#9E9E9E"
        android:textColor="#212121" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subscribe to Newsletter"
        android:onClick="registerNewsletter"
        android:backgroundTint="#1976D2"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/subscribersText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subscribers: 0"
        android:textSize="14sp"
        android:fontFamily="@font/poppins"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join Our Community"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/communityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:textColorHint="#9E9E9E"
        android:textColor="#212121" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join Community"
        android:onClick="joinCommunity"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/membersText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Members: 0"
        android:textSize="14sp"
        android:fontFamily="@font/poppins"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calendar of Events"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:textColor="#9C27B0"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/eventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Event Title"
        android:inputType="text"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:background="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:textColorHint="#9E9E9E"
        android:textColor="#212121" />

    <EditText
        android:id="@+id/eventDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Event Date (e.g., Dec 25, 2024)"
        android:inputType="text"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:background="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:textColorHint="#9E9E9E"
        android:textColor="#212121" />

    <EditText
        android:id="@+id/eventDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Event Description"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:textColorHint="#9E9E9E"
        android:textColor="#212121" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Event"
        android:onClick="addEvent"
        android:backgroundTint="#9C27B0"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upcoming Events:"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/eventsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:padding="12dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:onClick="goBack"
        android:backgroundTint="#666666"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />
    </LinearLayout>

</ScrollView>
